<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CroceVerdePlusNewStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/CV_text</item>
        <item name="android:fontStyle"></item>
        <item name="buttonStyle">@style/cv_stileBottoni</item>
        <item name="colorPrimary">@color/CV_green</item>
    </style>

    <style name="CVP_tabella">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CVP_titoli">
        <item name="android:textSize">34sp</item>
        <item name="android:background">@color/CV_green</item>
    </style>

    <style name="CVP_nomi">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="CVP_giorni">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/CV_green</item>
    </style>

    <style name="CVP_orari">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="CVP_vuoto">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/CV_green</item>
    </style>

    <style name="CV_buttons">
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">#656363</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CV_profilo">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="cv_righe_profilo">
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">#656363</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15sp</item>
    </style>

    <style name="cv_stileBottoni" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cv_buttons </item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="switch_colors" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/CV_green</item>
    </style>



</resources>