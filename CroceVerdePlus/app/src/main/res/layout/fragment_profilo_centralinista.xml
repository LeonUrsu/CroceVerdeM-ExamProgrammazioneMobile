<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="back_function"
    android:orientation="vertical"
    tools:context=".ProfiloCentralinista">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:theme="@style/CV_profilo">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/accountimage" />

                <TextView
                    android:id="@+id/nome_text_profilo_volontario"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Nome" />


                <TextView
                    android:id="@+id/cognome_text_profilo_volontario"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Cognome" />

                <TextView
                    android:id="@+id/data_di_nascita_text_profilo_volontario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Data di nascita" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:onClick="exit_function"
                    android:text="LogOut" />
        </LinearLayout>

</LinearLayout>
