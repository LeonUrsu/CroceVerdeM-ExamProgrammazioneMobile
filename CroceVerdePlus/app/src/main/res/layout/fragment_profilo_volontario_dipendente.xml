<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfiloCentralinista">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:theme="@style/cv_righe_profilo">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@drawable/accountimage" />

            <TextView
                android:id="@+id/nome_volontario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nome_volontario" />

            <TextView
                android:id="@+id/cognome_volontario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cognome_volontario" />

            <TextView
                android:id="@+id/datadinascita_volontario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="datadinascita_volontario" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"
                android:text="Statistiche Personali"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/servizio_118_1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="servizio_118_1a" />

            <TextView
                android:id="@+id/servizio_118_2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="servizio_118_2a" />

            <TextView
                android:id="@+id/servizio_118_3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="servizio_118_3a" />

            <TextView
                android:id="@+id/servizio_h24_1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="servizio_h24_1a" />

            <TextView
                android:id="@+id/servizio_h24_2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="servizio_h24_2a" />

            <TextView
                android:id="@+id/servizio_h24_3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="servizio_h24_3a" />

            <TextView
                android:id="@+id/ore_mese_corrente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ore_mese_corrente" />

            <TextView
                android:id="@+id/ore_mese_precendente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ore_mese_precendente" />

            <TextView
                android:id="@+id/ore_mese_precendente_x1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ore_mese_precendente_x1" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="exit_function"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>